{
  "JwtSettings": {
    "SecretKey": "THIS_IS_A_VERY_LONG_RANDOM_SECRET_KEY_FOR_JWT_SECURITY_2026_PRODUCTION_READY",
    "Issuer": "FoodDeliveryAuth",
    "Audience": "FoodDeliveryUsers"
  },

  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "CustomerPolicy"
      },
      "payments-route": {
        "ClusterId": "payments-cluster",
        "Match": {
          "Path": "/payments/{**catch-all}"
        },
        "AuthorizationPolicy": "AdminPolicy"
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "AuthorizationPolicy": "AdminPolicy"
      }
    },

    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "orders": {
            "Address": "http://order-service:8080/"
          }
        }
      },
      "payments-cluster": {
        "Destinations": {
          "payments": {
            "Address": "http://payment-service:8080/"
          }
        }
      },
      "notifications-cluster": {
        "Destinations": {
          "notifications": {
            "Address": "http://notification-service:8080/"
          }
        }
      }
    }
  }
}
